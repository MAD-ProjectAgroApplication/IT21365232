<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/istockphoto_165908320_612x612"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/store_name"
        android:layout_width="416dp"
        android:layout_height="59dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@color/Software_Logo_Background"
        android:fontFamily="@font/baloo_paaji"
        android:text="AGRO"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/Insert_constraint_width"
        android:layout_height="@dimen/Insert_constraint_height"
        android:layout_marginStart="6dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="5dp"
        android:background="#E8E4E4"
        android:backgroundTint="#52FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/sshopNumber"
            android:layout_width="@dimen/Insert_data_width"
            android:layout_height="@dimen/Insert_data_height"
            android:layout_marginStart="24dp"
            android:layout_marginTop="92dp"
            android:autoText="false"
            android:background="@drawable/insert_grdnt"
            android:backgroundTint="@color/Insert_details_backgroun_Tint"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Shop Number"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/sseedName"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/insert_grdnt"
            android:backgroundTint="@color/Insert_Price"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Seed Name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sshopNumber" />

        <EditText
            android:id="@+id/sprice"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/insert_grdnt"
            android:backgroundTint="#A192D875"
            android:ems="10"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Price"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sshopNumber" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="103dp"
            android:layout_height="63dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="192dp"
            android:backgroundTint="#2196F3"
            android:shadowColor="#000000"
            android:text="Save"
            android:textSize="20sp"
            app:cornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sseedName"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>