<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Seed Distributor"
        android:supportsRtl="true"
        android:theme="@style/Theme.SEED_Distributor"
        tools:targetApi="31">

        <activity
            android:name=".activities.SeedDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".activities.SeedFetchingActivity"
            android:exported="false" />

        <activity
            android:name=".activities.SeedInsertionActivity"
            android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>